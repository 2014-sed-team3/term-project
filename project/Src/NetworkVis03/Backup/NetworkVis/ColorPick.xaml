<Window x:Class="NetworkVis.ColorPick"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select a Color" Height="300" Width="300" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Image x:Name="wheel" Source="images\colorpicker.jpg" Grid.Row="0" Stretch="UniformToFill"/>
        <Rectangle x:Name="rec" Grid.Row="1" Fill="Black" Margin="2,2,2,2"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Cancel" Grid.Column="0" />
            <Button Content="OK" Grid.Column="1" />
            
        </Grid>
    </Grid>
</Window>
